#!/bin/bash

y=`date +%Y`
w=`date +%W`

ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null archive.sebpo.net mkdir -p /var/www/html/archive.sebpo.net/reports.sebpo.net/$y/$w
scp -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -r /var/www/html/reports.sebpo.net/* root@archive.sebpo.net:/var/www/html/archive.sebpo.net/reports.sebpo.net/$y/$w/
ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null  archive.sebpo.net chown -R apache:apache /var/www/html/archive.sebpo.net
